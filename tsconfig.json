{
  "compilerOptions": {
    "target": "esnext", // 使用 ESNext 语法编译
    "module": "esnext", // 使用 ESNext 模块系统
    "strict": true, // 启用所有严格类型检查选项
    "jsx": "preserve", // 保留 JSX 语法（如果有用到 JSX）
    "sourceMap": true, // 生成 source maps 以便调试
    "esModuleInterop": true, // 兼容 CommonJS 模块
    "moduleResolution": "node", // 模块解析策略使用 Node.js 风格
    "resolveJsonModule": true, // 支持导入 JSON 模块
    "lib": ["esnext", "dom"], // 包含 ESNext 和 DOM API
    "skipLibCheck": true, // 跳过库文件的类型检查
    "baseUrl": "./", // 基本路径
    "paths": {
      "@/*": ["src/*"] // 配置路径别名
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue" // 包含 src 目录下的 TypeScript 和 Vue 文件
  ],
  "exclude": [
    "node_modules",
    "dist" // 排除 node_modules 和编译输出目录
  ]
}
